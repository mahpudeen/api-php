{
    "name": "Modal Antara API",
    "description": "API Modal Antara Khusus Scoring",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "authors": [
        {
            "name": "Raka Admiral Abdurrahman",
            "email": "raabdurrahman@fineoz.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mysqli": "*",
        "ext-pdo": "*",
        "monolog/monolog": "^1.17",
        "phpmailer/phpmailer": "^6.1",
        "slim/php-view": "^2.0",
        "slim/slim": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": ">=5.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
